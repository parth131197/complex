{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "parthgupta13/multi-client",
            "hostname": "client",
            "essential": false 
        },
        {
            "name": "server",
            "image": "parthgupta13/multi-server",
            "hostname": "api",
            "essential": false 
        },
        {
            "name": "worker",
            "image": "parthgupta13/multi-worker",
            "hostname": "worker",
            "essential": false 
        },
        {
            "name": "nginx",
            "image": "parthgupta13/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "postMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
           
    ]
}